<resources>

    <style name="Image"></style>

    <style name="Image.Time">
        <item name="android:layout_width">@dimen/time_width</item>
        <item name="android:layout_height">@dimen/time_height</item>
        <item name="android:layout_marginLeft">@dimen/time_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/time_horizontal_margin</item>
        <item name="android:src">@drawable/num_8</item>
    </style>

    <style name="Image.Dot">
        <item name="android:layout_width">@dimen/dot_width</item>
        <item name="android:layout_height">@dimen/dot_height</item>
        <item name="android:src">@drawable/dot_black</item>
        <item name="android:layout_marginLeft">@dimen/dot_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/dot_horizontal_margin</item>
    </style>

    <style name="Text"></style>
    <style name="Text.Day">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/day_text_size</item>
        <item name="android:layout_marginLeft">@dimen/day_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/day_horizontal_margin</item>
    </style>

</resources>